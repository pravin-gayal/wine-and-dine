<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/category_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding" >

    <ImageView
        android:id="@+id/img_category"
        android:layout_width="@dimen/icon_category_width"
        android:layout_height="@dimen/icon_category_height"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textview_padding"
        android:layout_marginTop="@dimen/textview_padding"
        android:text="Category"
        android:textSize="@dimen/list_textview"
        android:visibility="gone" />

</LinearLayout>